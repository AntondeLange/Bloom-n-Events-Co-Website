---
/**
 * Base layout: global styles, SEO, skip link, navbar, main slot, footer.
 * Navbar is managed by the client-side Navbar island (fixed-top on inner pages, hero-following on home via sentinel).
 */
import "../styles/global.css";
import Seo from "../components/Seo.astro";
import Navbar from "../components/islands/Navbar";
import Footer from "../components/Footer.astro";
import { getSeoProps } from "../lib/seo";
import type { SeoProps } from "../lib/seo";

interface Props extends SeoProps {
  /** Optional additional class for <main> */
  mainClass?: string;
  /** Controls whether the shared navbar is rendered from the layout */
  renderNavbar?: boolean;
}

const { mainClass, renderNavbar = true, ...seo } = Astro.props;
const seoProps = getSeoProps(seo);
const isHome = Astro.url.pathname === "/" || Astro.url.pathname === "/index.html";
const bodyClass = isHome ? "home" : "";
// All pages reserve space for the navbar (homepage animation handled by position switching)
// Homepage: no top padding (hero starts at top), other pages: small padding
const mainPadding = isHome ? "" : "pt-2";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/assets/images/butterfly-icon.svg" />
    <link rel="apple-touch-icon" href="/assets/images/butterfly-icon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <!-- Performance: Preload main background image for better LCP -->
    <link rel="preload" as="image" href="/assets/images/BloomnBackground.jpg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;600;700&family=Montserrat:wght@400;600&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
      integrity="sha384-CK2SzKma4jA5H/MXDUU7i1TqZlCFaD4T01vtyDFvPlD97JQyS+IsSh1nI2EFbpyk"
      crossorigin="anonymous"
    />
    <!-- Bootstrap CSS removed - was causing navbar/footer conflicts -->
    <!-- Custom accordion CSS added to global.css - Bootstrap JS still used for functionality -->
    <Seo {...seoProps} />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class={`flex min-h-screen flex-col bg-champers text-charcoal ${bodyClass}`.trim()}>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <!-- Route-aware navbar: fixed-top on non-home, multi-state on home -->
    {renderNavbar && <Navbar currentPath={Astro.url.pathname} client:load />}
    <main class={`flex-1 ${mainPadding} ${mainClass ?? ""}`.trim()}>
      <div id="main-content" tabindex="-1">
        <slot />
      </div>
    </main>
    <Footer />
    <script src="/scripts/accordion.js" defer is:inline></script>
    <script is:inline>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.getRegistrations().then((registrations) => {
          registrations.forEach((registration) => registration.unregister());
        });
      }
      if ("caches" in window) {
        caches.keys().then((keys) => keys.forEach((key) => caches.delete(key)));
      }
    </script>
  </body>
</html>
