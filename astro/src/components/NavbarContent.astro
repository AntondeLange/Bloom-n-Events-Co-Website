---
/**
 * NavbarContent Component
 * 
 * Shared navbar inner content used by HomeNavbar.
 * Contains mobile menu, desktop nav, logo, and contact button.
 */
import { SITE } from "../lib/constants";

interface Props {
  currentPath: string;
  isHome?: boolean;
}

const { currentPath, isHome = false } = Astro.props;

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About Us" },
  { href: "/team", label: "Our Team" },
];
const portfolioLinks = [
  { href: "/events", label: "Events" },
  { href: "/workshops", label: "Workshops" },
  { href: "/displays", label: "Displays" },
];
const capabilitiesLink = { href: "/capabilities", label: "Our Capabilities" };

const isActive = (href: string) => {
  if (href === "/") return currentPath === "/" || currentPath === "";
  return currentPath.startsWith(href);
};

const visibleNavLinks = navLinks.filter(({ href }) => !isActive(href));
const visiblePortfolioLinks = portfolioLinks.filter(({ href }) => !isActive(href));
const showCapabilities = !isActive(capabilitiesLink.href);
const showGallery = !isActive("/gallery");
---

<div class="relative mx-auto flex min-h-[var(--nav-height,72px)] max-w-7xl flex-wrap items-center justify-between gap-4 px-4 md:px-6 navbar-inner">
  <!-- Mobile menu toggle (left on mobile) -->
  <details class="group/menu relative order-1 flex self-center lg:hidden">
    <summary
      class="flex h-10 w-10 cursor-pointer list-none items-center justify-center rounded bg-gold text-charcoal transition hover:bg-charcoal hover:text-gold active:bg-charcoal active:text-gold [&::-webkit-details-marker]:hidden"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="h-6 w-6 shrink-0" viewBox="0 0 24 24" fill="none" stroke="#1e1e1e" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <line x1="3" y1="6" x2="21" y2="6" />
        <line x1="3" y1="12" x2="21" y2="12" />
        <line x1="3" y1="18" x2="21" y2="18" />
      </svg>
    </summary>
    <div
      class="mobile-menu-panel absolute left-0 z-50 min-w-[200px] rounded-md border border-charcoal/20 bg-charcoal py-2 shadow-lg"
    >
      {visibleNavLinks.map(({ href, label }) => (
        <a
          href={href}
          class="block px-4 py-2 text-sm text-gold no-underline hover:bg-white/10 hover:text-gold"
        >
          {label}
        </a>
      ))}
      {(visiblePortfolioLinks.length > 0 || showCapabilities) && (
        <>
          <p class="px-4 py-1 text-xs font-semibold uppercase tracking-wider text-gold">Portfolio</p>
          {visiblePortfolioLinks.map(({ href, label }) => (
            <a
              href={href}
              class="block pr-4 py-2 pl-[30px] text-sm text-gold no-underline hover:bg-white/10 hover:text-gold"
            >
              {label}
            </a>
          ))}
          {showCapabilities && (
            <>
              <hr class="my-1 mx-4 border-t border-gold" />
              <a
                href={capabilitiesLink.href}
                class="block pr-4 py-2 pl-[30px] text-sm text-gold no-underline hover:bg-white/10 hover:text-gold"
              >
                {capabilitiesLink.label}
              </a>
            </>
          )}
        </>
      )}
      {showGallery && (
        <a
          href="/gallery"
          class="block px-4 py-2 text-sm text-gold no-underline hover:bg-white/10 hover:text-gold"
        >
          Gallery
        </a>
      )}
    </div>
  </details>

  <!-- Desktop nav (left) -->
  <div class="order-2 hidden flex-1 basis-0 flex-wrap items-center gap-1 lg:order-1 lg:flex lg:basis-auto lg:flex-1">
    <ul class="flex flex-wrap items-center gap-1">
      {visibleNavLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="rounded px-3 py-2 text-sm text-gold no-underline transition hover:bg-white/10 hover:text-gold"
          >
            {label}
          </a>
        </li>
      ))}
      <li class="relative group">
        <button
          type="button"
          id="portfolio-dropdown-trigger"
          class:list={[
            "inline-flex items-center rounded px-3 py-2 text-sm text-gold no-underline transition hover:bg-white/10 hover:text-gold focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:ring-offset-charcoal",
            (portfolioLinks.some(link => isActive(link.href)) || isActive(capabilitiesLink.href)) && "font-semibold",
          ]}
          aria-expanded="false"
          aria-haspopup="true"
          aria-controls="portfolio-dropdown-menu"
        >
          Portfolio
          <i class="portfolio-chevron bi bi-chevron-down ml-0.5 text-xs transition-transform duration-300" aria-hidden="true"></i>
        </button>
        <div
          id="portfolio-dropdown-menu"
          class="portfolio-dropdown absolute left-0 z-50 hidden min-w-[180px] rounded-md border-2 border-gold bg-charcoal py-1 shadow-lg"
          role="menu"
          aria-labelledby="portfolio-dropdown-trigger"
        >
          {visiblePortfolioLinks.map(({ href, label }) => (
            <a
              href={href}
              class="block pr-4 py-2 pl-[30px] text-sm text-gold no-underline hover:bg-white/10 hover:text-gold focus:bg-white/10 focus:outline-none"
              role="menuitem"
            >
              {label}
            </a>
          ))}
          {showCapabilities && (
            <>
              <hr class="my-1 mx-4 border-t border-gold" />
              <a
                href={capabilitiesLink.href}
                class="block pr-4 py-2 pl-[30px] text-sm text-gold no-underline hover:bg-white/10 hover:text-gold focus:bg-white/10 focus:outline-none"
                role="menuitem"
              >
                {capabilitiesLink.label}
              </a>
            </>
          )}
        </div>
      </li>
      {showGallery && (
        <li>
          <a
            href="/gallery"
            class="rounded px-3 py-2 text-sm text-gold no-underline transition hover:bg-white/10 hover:text-gold"
          >
            Gallery
          </a>
        </li>
      )}
    </ul>
  </div>

  <!-- Logo (center on mobile, center on desktop) -->
  <a
    href="/"
    class="order-2 flex shrink-0 items-center justify-center flex-1 self-center lg:order-2 lg:flex-none"
    aria-label={`${SITE.name} home`}
  >
    <img
      src="/assets/images/logo-blk-long.png"
      alt={SITE.name}
      class="h-12 w-auto max-w-[200px] object-contain md:h-14"
      width="200"
      height="60"
      loading="eager"
      fetchpriority="high"
    />
  </a>

  <!-- Contact (right) -->
  <div 
    class="navbar-contact order-3 flex shrink-0 items-center self-center"
  >
    <a
      href="/contact"
      class="rounded bg-gold px-4 py-2 text-sm font-semibold text-charcoal no-underline transition hover:bg-charcoal hover:text-gold active:bg-charcoal active:text-gold"
    >
      Contact Us
    </a>
  </div>
</div>
