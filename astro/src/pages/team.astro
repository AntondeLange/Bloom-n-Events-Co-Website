---
/**
 * Team: hero, anchor nav, founders, team members, collaborators, CTA.
 * Matches team.html layout and copy. All cards use champers background with gold border.
 */
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import TeamCarousel from "../components/react/TeamCarousel";
import { CONTACT } from "../lib/constants";

const teamCarouselMembers = [
  {
    name: "Tamara de Lange (nee Lilly)",
    role: "CEO & Founder",
    src: "/assets/images/Team/Tamara.JPG",
    alt: "Tamara de Lange - CEO & Founder",
    blurb: "Founder and creative lead with 22+ years of experience in placemaking, events, and community development.",
  },
  {
    name: "Anton de Lange",
    role: "COO & Co-Founder",
    src: "/assets/images/Team/Anton.jpg",
    alt: "Anton de Lange - COO & Co-Founder",
    blurb: "Operations lead with decades of technical, safety, and delivery expertise across complex projects.",
  },
  {
    name: "Joh",
    role: "Engineering, Design, Construction & Patron",
    src: "/assets/images/Team/team-member-1.jpeg",
    alt: "Joh - Engineering, Design, Construction & Patron",
    blurb: "Engineering, design, and construction support for Bloom'n Events Co.",
  },
  {
    name: "Kim",
    role: "Sign Writing, Artistic Support",
    src: "/assets/images/Team/team-member-2.jpg",
    alt: "Kim - Sign Writing, Artistic Support",
    blurb: "Sign writing and artistic support for Bloom'n Events Co.",
  },
  {
    name: "Sarah",
    role: "R&D, Creative Support & Patron",
    src: "/assets/images/Team/team-member-4.jpeg",
    alt: "Sarah - R&D, Creative Support & Patron",
    blurb: "Research, creative support, and patron care for Bloom'n Events Co.",
  },
  {
    name: "Chelsea",
    role: "On-Site Event Support",
    src: "/assets/images/Team/team-member-3.jpg",
    alt: "Chelsea - On-Site Event Support",
    blurb: "On-site event support and guest care for Bloom'n Events Co.",
  },
  {
    name: "Nino",
    role: "Music Maestro",
    src: "/assets/images/Team/team-member-6.jpg",
    alt: "Nino - Music Maestro",
    blurb: "Music direction and performance support for Bloom'n Events Co.",
  },
  {
    name: "Sarah",
    role: "Marketing Genius",
    src: "/assets/images/Team/team-member-7.jpg",
    alt: "Sarah - Marketing Genius",
    blurb: "Marketing and storytelling support for Bloom'n Events Co.",
  },
  {
    name: "Bronwyn",
    role: "Child Whisperer",
    src: "/assets/images/Team/team-member-8.jpeg",
    alt: "Bronwyn - Child Whisperer",
    blurb: "Kids workshops and family engagement support for Bloom'n Events Co.",
  },
  {
    name: "Shimmer",
    role: "The Band",
    src: "/assets/images/Team/Team-member-9.jpg",
    alt: "Shimmer - The Band",
    blurb: "Live music and performance support for Bloom'n Events Co.",
  },
];
---

<BaseLayout
  title="Our Team"
  description="Meet the Bloom'n Events Co team. Led by founders Tamara & Anton de Lange. 40+ years combined experience in event production, engineering, and design. Serving Perth and Western Australia from Brookton, WA."
  path="/team"
>
  <!-- HERO SECTION -->
  <section class="hero-section" aria-label="Hero">
    <div class="hero-background">
      <Image src="/assets/images/KidsWorkshops/kidsworkshops05.jpg" class="hero-image" alt="Bloom'n Events Co Team - Creative and passionate professionals" loading="eager" decoding="async" width="1600" height="900" />
      <div class="hero-overlay"></div>
    </div>
    <div class="hero-content">
      <div class="mx-auto max-w-5xl px-4 md:px-6">
        <div class="text-center">
          <h1 class="hero-headline hero-animate-fade-in">Meet Our Bloom'n Powerhouse Team</h1>
          <p class="hero-subhead hero-animate-fade-in hero-animate-delay-1">A passionate, creative team bringing 40+ years of combined expertise in event planning, design, and community engagement. We're guided by purpose, grounded in care, and committed to creating moments that move people.</p>
          <div class="hero-cta hero-animate-fade-in hero-animate-delay-2">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start the Conversation</a>
            <a href="#foundersHeading" class="btn-outline-gold btn-lg mb-3">Meet the Team</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Meet the Team Carousel Section -->
  <section class="section-secondary team-carousel-section" aria-labelledby="teamHeading" id="teamHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <div class="team-carousel-panel">
        <div class="team-carousel-grid">
          <div class="team-carousel-copy">
            <div class="team-carousel-title-box">
              <h2 id="teamHeading" class="team-carousel-title">
                <span>Meet</span>
                <span class="team-carousel-title-gold">Our</span>
                <span>Bloom'n</span>
                <span class="team-carousel-title-gold">Team</span>
              </h2>
            </div>
            <p class="team-carousel-subtitle team-carousel-subtitle-bottom">
              A close-knit, family-run business proudly supporting other local and family-owned businesses across
              Western Australia, grounded in community, care, and shared success.
            </p>
          </div>
          <TeamCarousel members={teamCarouselMembers} client:visible />
        </div>
      </div>
    </div>
  </section>

  <!-- FINAL CTA SECTION -->
  <section class="section-main" aria-labelledby="teamCtaHeading" id="teamCta">
    <div class="mx-auto max-w-4xl px-4 md:px-6">
      <h2 id="teamCtaHeading" class="heading-blush-bg text-center">Ready to create together?</h2>
      <div class="card shadow cta-card">
        <div class="card-body text-center p-5">
          <p class="lead text-charcoal mb-5">Let's bring your vision to life with a blend of care, craft, and engineering.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start the Conversation</a>
            <a href="/gallery" class="btn-outline-gold btn-lg mb-3">View Our Portfolio</a>
          </div>
          <p class="text-charcoal mt-4 mb-0">
            <i class="bi bi-telephone-fill"></i> <a href={`tel:${CONTACT.phone}`} class="text-gold">{CONTACT.phone}</a> | 
            <i class="bi bi-envelope-fill"></i> <a href={`mailto:${CONTACT.email}`} class="text-gold">{CONTACT.email}</a>
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
