---
/**
 * Contact: hero with background image, two-column layout (contact info left, form right).
 * Matches contact.html layout and copy.
 */
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/react/ContactForm";
import { CONTACT } from "../lib/constants";
import { getLocalBusinessSchema } from "../lib/structured-data";

const localBusinessSchema = getLocalBusinessSchema();
---

<BaseLayout
  title="Contact Bloom'n Events Co | Event Production Perth & WA"
  description="Contact Bloom'n Events Co for full-service event production in Perth & Western Australia. Phone: 1800 826 268. Email: enquiries@bloomneventsco.com.au. Based in Brookton, WA. Start your project today."
  path="/contact"
>
  <!-- Contact Page with Hero Background -->
  <section class="contact-hero-section" aria-label="Contact">
    <div class="contact-hero-background">
      <Image
        src="/assets/images/Brookton.JPG"
        class="contact-hero-image"
        alt="Brookton, WA - Home of Bloom'n Events Co"
        loading="eager"
        decoding="async"
        width="1600"
        height="900"
      />
      <div class="contact-hero-overlay"></div>
    </div>

    <div class="container-fluid contact-hero-container">
      <div class="row g-0 h-100">
        <!-- Left Section - Contact Information -->
        <div class="col-12 col-lg-6 contact-info-section">
          <div class="contact-info-content">
            <h1 class="hero-headline">We Look Forward to Working with You</h1>
            <p class="contact-description">
              Give us a date, a budget, and timeâ€”we'll make it happen. One team. One accountable partner. Full-service event production with engineering-grade reliability.
            </p>

            <!-- Contact Info at Bottom Left -->
            <div class="contact-info-bottom">
              <div class="contact-info-grid">
                <!-- Location -->
                <div class="contact-info-block">
                  <h3 class="contact-info-heading">Location</h3>
                  <p class="contact-info-text">Bloom'n Events Co</p>
                  <p class="contact-info-text">Bloom'n Creative Design Co</p>
                  <p class="contact-info-text">Brookton, WA, 6306</p>
                  <p class="contact-info-text">Australia</p>
                </div>

                <!-- Social Media -->
                <div class="contact-info-block">
                  <h3 class="contact-info-heading">Social Media</h3>
                  <div class="social-media-grid">
                    <a
                      href="https://www.instagram.com/bloomneventsco/"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-media-icon"
                      aria-label="Follow us on Instagram"
                    >
                      <i class="bi bi-instagram"></i>
                    </a>
                    <a
                      href="https://www.linkedin.com/company/bloom-n-events-co/"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-media-icon"
                      aria-label="Follow us on LinkedIn"
                    >
                      <i class="bi bi-linkedin"></i>
                    </a>
                    <a
                      href="https://www.facebook.com/bloomneventsco/"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-media-icon"
                      aria-label="Follow us on Facebook"
                    >
                      <i class="bi bi-facebook"></i>
                    </a>
                    <a
                      href="https://www.tiktok.com/@bloomneventsco"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-media-icon"
                      aria-label="Follow us on TikTok"
                    >
                      <i class="bi bi-tiktok"></i>
                    </a>
                  </div>
                </div>

                <!-- Email -->
                <div class="contact-info-block">
                  <h3 class="contact-info-heading">Email</h3>
                  <p class="contact-info-text">
                    <a href={`mailto:${CONTACT.email}`} class="contact-link">{CONTACT.email}</a>
                  </p>
                </div>

                <!-- Contact -->
                <div class="contact-info-block">
                  <h3 class="contact-info-heading">Contact</h3>
                  <p class="contact-info-text">
                    <a href={`tel:${CONTACT.phone.replace(/\s/g, "")}`} class="contact-link">{CONTACT.phone}</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Section - Contact Form Card -->
        <div class="col-12 col-lg-6 contact-form-section">
          <div class="contact-form-card">
            <div class="contact-form-header">
              <h2 class="contact-form-title">Tell Us What You Need</h2>
              <p class="contact-form-subtitle">Our team is ready to assist you with every detail, big or small.</p>
            </div>

            <ContactForm client:idle />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Structured Data: LocalBusiness -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(localBusinessSchema)} />
</BaseLayout>
