---
/**
 * Gallery: Event, Workshop, and Displays carousels, Success Stories, CTA.
 * Matches gallery.html structure and content.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Carousel from "../components/islands/Carousel";
import SuccessStoriesCarousel from "../components/react/SuccessStoriesCarousel";
import StickyMobileCTA from "../components/react/StickyMobileCTA";
import { CONTACT } from "../lib/constants";

const eventSlides = [
  { src: "/assets/images/Centuria Connect140/Connect140 (1).jpg", alt: "Centuria Connect140 Event Setup" },
  { src: "/assets/images/Centuria 50th Birthday/25d854af-18a7-46ed-9cb8-1e3d7a818715.jpg", alt: "Centuria 50th Birthday Celebration" },
  { src: "/assets/images/Centuria Connect140/Connect140 (2).jpg", alt: "Centuria Connect140 Stage View" },
  { src: "/assets/images/Centuria 50th Birthday/60a182ec-9f16-4f20-919b-59e9451bb4a8.jpg", alt: "Centuria 50th Birthday Event" },
  { src: "/assets/images/Centuria Connect140/Connect140 (3).jpg", alt: "Centuria Connect140 Arrangements" },
  { src: "/assets/images/Centuria 50th Birthday/efea378d-9bd1-4906-9237-db1ed574869c.jpg", alt: "Centuria 50th Birthday Gala" },
  { src: "/assets/images/Centuria Connect140/Connect140 (4).JPG", alt: "Centuria Connect140 Guest Interaction" },
