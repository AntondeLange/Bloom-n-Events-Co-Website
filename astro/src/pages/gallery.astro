  { src: "/assets/images/AdultWorkshops/adultworkshops (4).jpg", alt: "Adult Creative Workshop" },
  { src: "/assets/images/Hawaiian World Of Flavours/Hawaian250315-0029.jpg", alt: "Workshop Participants Cooking" },
  { src: "/assets/images/KidsWorkshops/kidsworkshops02.jpg", alt: "Kids Workshop Session" },
  { src: "/assets/images/Pheonix SH Oct 2025/PheonixTTSOct25.1.JPG", alt: "Phoenix School Holiday Workshop" },
  { src: "/assets/images/Hawaiian Neighbourhood Nibbles/Neighbourhood-Nibbles (2).jpg", alt: "Children Creating Art" },
  { src: "/assets/images/AdultWorkshops/adultworkshops (6).jpg", alt: "Adult Workshop Session" },
  { src: "/assets/images/Hawaiian World Of Flavours/Hawaian250315-0068.jpg", alt: "Finished Hawaiian Dishes" },
  { src: "/assets/images/Pheonix SH Oct 2025/PheonixTTSOct25364.JPG", alt: "Phoenix Workshop Activity" },
].map((slide) => ({ type: "image" as const, ...slide }));

const displaysSlides = [
  { src: "/assets/images/BloomnDisplays/Displays (5).png", alt: "Custom Display Installation" },
  { src: "/assets/images/BloomnDisplays/Displays (6).png", alt: "Creative Display Design" },
  { src: "/assets/images/BloomnDisplays/Displays (10).png", alt: "Custom Display Installation" },
  { src: "/assets/images/BloomnDisplays/Displays (11).png", alt: "Creative Display Design" },
  { src: "/assets/images/Centuria Breast Cancer/Centuria Breast Cancer Oct25.1.jpg", alt: "Seasonal Display Installation" },
  { src: "/assets/images/Centuria Breast Cancer/Centuria Breast Cancer Oct25.2.jpg", alt: "Event Display Setup" },
  { src: "/assets/images/Centuria 50th Birthday/02f37f68-0f92-4a73-ab31-9214554139ec.jpg", alt: "Elegant Display Installation" },
  { src: "/assets/images/Centuria 50th Birthday/6b9b824b-c52d-4a0b-af80-a2e0f7716094.jpg", alt: "Elegant Display Installation" },
  { src: "/assets/images/Pheonix SH Oct 2025/PheonixTTSOct25.1.JPG", alt: "Phoenix Display Installation" },
  { src: "/assets/images/Pheonix SH Oct 2025/PheonixTTSOct25364.JPG", alt: "Phoenix Display Installation" },
].map((slide) => ({ type: "image" as const, ...slide }));
---

<BaseLayout
  title="Event Portfolio Gallery | Perth & WA Event Production | Bloom'n Events Co"
  description="Explore Bloom'n Events Co's event production portfolio. Corporate events, creative workshops, and custom displays across Perth and Western Australia, designed and built in-house."
  path="/gallery"
>
  <!-- Event Gallery -->
  <section class="gallery-section section-main" aria-labelledby="event-gallery-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="event-gallery-heading" class="heading-blush-bg mb-4 text-center">
        Event Moments
      </h2>
      <Carousel slides={eventSlides} virtualizeThreshold={8} renderWindow={5} client:visible />
    </div>
  </section>

  <!-- Workshop Gallery -->
  <section class="gallery-section section-main" aria-labelledby="workshop-gallery-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="workshop-gallery-heading" class="heading-blush-bg mb-4 text-center">
        Workshop Moments
      </h2>
      <Carousel slides={workshopSlides} virtualizeThreshold={8} renderWindow={5} client:visible />
    </div>
  </section>

  <!-- Displays Gallery -->
  <section class="gallery-section section-main" aria-labelledby="displays-gallery-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="displays-gallery-heading" class="heading-blush-bg mb-4 text-center">
        Display Stories
      </h2>
      <Carousel slides={displaysSlides} virtualizeThreshold={8} renderWindow={5} client:visible />
    </div>
  </section>

  <!-- Success Stories -->
  <section class="section-main" aria-labelledby="case-studies-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="case-studies-heading" class="heading-blush-bg mb-5 text-center">
        Success Stories
      </h2>
      <SuccessStoriesCarousel client:visible />
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section-main" aria-labelledby="cta-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="cta-heading" class="heading-blush-bg mb-5 text-center">
        Let's create your next experience.
      </h2>
      <div class="card shadow cta-card">
        <div class="card-body p-5 text-center">
          <p class="lead text-charcoal mb-5">
            We invite you to create with us. One team, one accountable partner, and a shared commitment to craft.
          </p>
          <div class="cta-buttons mb-4">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start the Conversation</a>
            <a href="/about" class="btn-outline-gold btn-lg mb-3">Learn More About Us</a>
          </div>
          <p class="text-charcoal mt-4 mb-0">
            <i class="bi bi-telephone-fill" aria-hidden="true"></i>{" "}
            <a href={`tel:${CONTACT.phone.replace(/\s/g, "")}`} class="text-gold hover:underline">
              {CONTACT.phone}
            </a>{" "}
            | <i class="bi bi-envelope-fill" aria-hidden="true"></i>{" "}
            <a href={`mailto:${CONTACT.email}`} class="text-gold hover:underline">
              {CONTACT.email}
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <StickyMobileCTA client:idle />
</BaseLayout>
