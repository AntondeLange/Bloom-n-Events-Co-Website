---
/**
 * Events: hero, anchor nav, What We Do, How It Works, What You Get, FAQs, Case Studies, CTA.
 * Matches events.html layout and copy.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import AnchorNav from "../components/AnchorNav.astro";
import StickyMobileCTA from "../components/react/StickyMobileCTA";
import SuccessStoriesCarousel from "../components/react/SuccessStoriesCarousel";
import { CONTACT } from "../lib/constants";
import { getServiceSchema } from "../lib/structured-data";

const serviceSchema = getServiceSchema(
  "Corporate Event Planning",
  "Corporate event planning services in Perth & Western Australia. Networking events, conferences, product launches. Full-service production with in-house design, engineering, and fabrication."
);
---

<BaseLayout
  title="Corporate Event Planning Perth & WA | Bloom'n Events Co"
  description="Corporate event planning services in Perth & Western Australia. Networking events, conferences, product launches. Full-service production with in-house design, engineering, and fabrication. Based in Brookton, WA."
  path="/events"
>
  <h1 class="visually-hidden">Corporate Event Planning Perth & WA</h1>

  <!-- Hero -->
  <section class="hero-section" aria-label="Hero">
    <div class="hero-background">
      <img
        src="/assets/images/Centuria 50th Birthday/60a182ec-9f16-4f20-919b-59e9451bb4a8.jpg"
        alt="Professional corporate event setup in Perth"
        class="hero-image"
        loading="eager"
        decoding="async"
        width="1600"
        height="900"
      />
    </div>
    <div class="hero-overlay" aria-hidden="true" />
    <div class="hero-content">
      <div class="w-full max-w-4xl px-4 text-center md:px-6">
        <h1 class="hero-headline">
          Professional Corporate Event Planning in Perth
        </h1>
        <p class="hero-subhead">
          We design and deliver immersive corporate experiences that connect, elevate, and inspire. From networking events to product launches, our full-service approach ensures every detail is handled with precision and artistry.
        </p>
        <div class="hero-cta">
          <a href="/contact" class="btn-gold">Start Your Project</a>
          <a href="#case-studies" class="btn-outline-gold">View Success Stories</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Anchor nav -->
  <AnchorNav
    links={[
      { href: "#whatWeDoHeading", label: "What We Do" },
      { href: "#howItWorksHeading", label: "How It Works" },
      { href: "#whatYouGetHeading", label: "What You Get" },
      { href: "#faqsHeading", label: "FAQs" },
      { href: "#case-studies", label: "Success Stories" },
    ]}
  />

  <!-- What We Do Section -->
  <section class="section-main" aria-labelledby="whatWeDoHeading" id="whatWeDoHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="whatWeDoHeading" class="heading-blush-bg text-center">What We Do</h2>
      <div class="grid gap-4 mb-5">
        <div class="card shadow" style="background-color: var(--color-champers); border: 2px solid var(--color-gold); border-radius: 12px; padding: 24px 28px;">
          <div class="card-body">
            <p class="lead text-charcoal mb-3">
              <b>Bloom'n Events Co.</b> delivers corporate experiences that connect, elevate, and inspire. From single-day activations to multiday retreats—networking, professional development, leadership, and brand engagement across Perth and Western Australia.
            </p>
            <p class="text-charcoal mb-3">
              We design environments that reflect your team's culture and objectives. One team handles strategy, design, fabrication, and execution—so you don't manage multiple vendors or coordinate hand-offs.
            </p>
            <p class="text-charcoal mb-0">
              Based in Brookton, WA. 40+ years of combined expertise. Engineering-grade reliability for corporate and government clients.
            </p>
          </div>
        </div>
        <div class="grid gap-2 grid-cols-2 lg:grid-cols-5">
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria Connect140/Connect140 (1).jpg" class="w-full h-full object-cover object-center" alt="Corporate networking event setup" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria Connect140/Connect140 (2).jpg" class="w-full h-full object-cover object-center" alt="Brand activation at business event" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria Connect140/Connect140 (3).jpg" class="w-full h-full object-cover object-center" alt="Conference setup with arrangements" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria Connect140/Connect140 (4).JPG" class="w-full h-full object-cover object-center" alt="Product launch event" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/00ef2aa7-6a7e-45d9-9613-0f17e9c0941c.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/02f37f68-0f92-4a73-ab31-9214554139ec.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/064a7a51-766f-4fcf-b1df-f934851ef16c.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/1292f05a-3499-44dc-a9b9-09a7bd33d047.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/1fd2ee64-1cbe-4d47-8087-c8d748149530.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <img src="/assets/images/Centuria 50th Birthday/25d854af-18a7-46ed-9cb8-1e3d7a818715.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async">
          </div>
        </div>
      </div>
      
      <!-- Event Types -->
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Networking Events</h3>
            <p class="text-charcoal">Intentional layouts and atmospheric styling that naturally inspire conversation and meaningful guest interactions.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Conferences & Workshops</h3>
            <p class="text-charcoal">Full event experiences from small roundtables to large conferences with artful sessions in leadership, wellness, and creativity.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Product Launches</h3>
            <p class="text-charcoal">Immersive brand experiences with interactive installations, dynamic displays, and engaging activities.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Custom Experiences</h3>
            <p class="text-charcoal">Distinctive events tailored to embody your brand and goals, delivering unforgettable experiences for every attendee.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section-secondary" aria-labelledby="howItWorksHeading" id="howItWorksHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="howItWorksHeading" class="heading-blush-bg text-center">How It Works</h2>
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-chat-dots" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">1. Consultation</h3>
            <p class="text-charcoal">We start with a detailed consultation to understand your objectives, audience, budget, and vision. We'll discuss your goals and explore how we can bring your event to life.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-pencil-square"></i>
            </div>
            <h3 class="text-gold mb-3">2. Design & Planning</h3>
            <p class="text-charcoal">Our team creates a comprehensive event plan including layout, styling, technical requirements, and timeline. We handle all design, logistics, and coordination in-house.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-tools"></i>
            </div>
            <h3 class="text-gold mb-3">3. Execution</h3>
            <p class="text-charcoal">On event day, our team manages setup, technical elements, styling, and coordination. We ensure everything runs smoothly so you can focus on your guests and objectives.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-check-circle"></i>
            </div>
            <h3 class="text-gold mb-3">4. Follow-Up</h3>
            <p class="text-charcoal">After the event, we handle pack-down and provide a summary. We're available for feedback and to discuss future events or ongoing partnerships.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- What You Get Section -->
  <section class="section-main" aria-labelledby="whatYouGetHeading" id="whatYouGetHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="whatYouGetHeading" class="heading-blush-bg text-center">What You Get</h2>
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Full-Service Event Management</h3>
            <p class="text-charcoal">From initial concept through to pack-down, we handle every aspect of your event. No need to coordinate multiple vendors—we manage it all.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Custom Design & Styling</h3>
            <p class="text-charcoal">Every event is uniquely designed to reflect your brand and objectives. Our in-house design team creates cohesive visual experiences that align with your message.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Technical Expertise</h3>
            <p class="text-charcoal">With 40+ years of engineering experience, we ensure all technical elements—lighting, sound, power, structures—are safe, compliant, and professionally executed.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Atmospheric Styling</h3>
            <p class="text-charcoal">We create environments that naturally facilitate connection and engagement. Thoughtful layouts, lighting, and styling ensure your event feels welcoming and purposeful.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Single Point of Contact</h3>
            <p class="text-charcoal">One dedicated team manages everything, simplifying communication and ensuring consistency. You have a single point of accountability throughout the process.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Proven Results</h3>
            <p class="text-charcoal">We've successfully delivered events for leading Perth businesses including <a href="/case-study-centuria-connect140" class="text-gold">Centuria Capital</a>, <a href="/case-study-centuria-50th-birthday" class="text-gold">140 St Georges Terrace</a>, and <a href="/case-study-hawaiian-forrestfield" class="text-gold">Hawaiian Shopping Centres</a>.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="section-secondary" aria-labelledby="faqsHeading" id="faqsHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="faqsHeading" class="heading-blush-bg text-center">Frequently Asked Questions</h2>
      <div class="accordion" id="eventsFAQ">
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" aria-expanded="true">
                What types of corporate events do you plan?
              </button>
            </h3>
            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We plan a wide range of corporate events including networking events, conferences, workshops, product launches, brand activations, team building events, and custom corporate experiences. Each event is tailored to your specific objectives and audience.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2" aria-expanded="false">
                How far in advance should we book?
              </button>
            </h3>
            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We recommend booking at least 4-6 weeks in advance for standard events, and 8-12 weeks for larger conferences or complex activations. However, we can accommodate shorter timelines depending on availability. Contact us to discuss your timeline.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3" aria-expanded="false">
                Do you handle all aspects of the event?
              </button>
            </h3>
            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                Yes, we provide full-service event management. This includes design, styling, technical setup (lighting, sound, power), coordination, on-site management, and pack-down. We can also coordinate with caterers, speakers, and other vendors as needed.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4" aria-expanded="false">
                What areas do you serve?
              </button>
            </h3>
            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We serve businesses throughout Perth and Western Australia. Based in Brookton, WA, we regularly work with clients across the Perth metropolitan area and can travel to regional locations as needed.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5" aria-expanded="false">
                Can you work with our existing venue?
              </button>
            </h3>
            <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                Absolutely. We can work with your chosen venue or help you find the perfect location. We'll assess the space, handle all technical requirements, and transform it to match your event vision.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Success Stories Section -->
  <section class="section-main" aria-labelledby="caseStudiesHeading" id="case-studies">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="caseStudiesHeading" class="heading-blush-bg text-center">Related Success Stories</h2>
      <SuccessStoriesCarousel client:idle />
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="section-main" aria-labelledby="ctaHeading" id="cta">
    <div class="mx-auto max-w-4xl px-4 md:px-6">
      <h2 id="ctaHeading" class="heading-blush-bg text-center">Ready to Start Your Project?</h2>
      <div class="card shadow cta-card">
        <div class="card-body text-center p-5">
          <p class="lead text-charcoal mb-5">Let's discuss how we can create a memorable experience that connects, elevates, and inspires your team and stakeholders.</p>
          <div class="cta-buttons mb-4">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start Your Project</a>
            <a href="/gallery" class="btn-outline-gold btn-lg mb-3">View Our Portfolio</a>
          </div>
          <p class="text-charcoal mt-4 mb-0">
            <i class="bi bi-telephone-fill" aria-hidden="true"></i>{" "}
            <a href={`tel:${CONTACT.phone.replace(/\s/g, "")}`} class="text-gold hover:underline">{CONTACT.phone}</a>
            {" | "}
            <i class="bi bi-envelope-fill" aria-hidden="true"></i>{" "}
            <a href={`mailto:${CONTACT.email}`} class="text-gold hover:underline">{CONTACT.email}</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <StickyMobileCTA client:idle />

  <!-- Structured Data: Service -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
</BaseLayout>
