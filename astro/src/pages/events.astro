---
/**
 * Events: hero, anchor nav, What We Do, How It Works, What You Get, FAQs, Case Studies, CTA.
 * Matches events.html layout and copy.
 */
import OptimizedImage from "../components/OptimizedImage.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import AnchorNav from "../components/islands/AnchorNav";
import StickyMobileCTA from "../components/react/StickyMobileCTA";
import SuccessStoriesCarousel from "../components/react/SuccessStoriesCarousel";
import { CONTACT } from "../lib/constants";
import { getServiceSchema } from "../lib/structured-data";
import { buildSrcSet, encodeSrc, withWidthSuffix, DEFAULT_WIDTH } from "../lib/image-utils";

const heroImage = "/assets/images/Centuria 50th Birthday/60a182ec-9f16-4f20-919b-59e9451bb4a8.jpg";
const heroImagePreloadSrc = encodeSrc(withWidthSuffix(heroImage, DEFAULT_WIDTH));
const heroImagePreloadSrcSet = buildSrcSet(heroImage);

const serviceSchema = getServiceSchema(
  "Corporate Event Planning",
  "Corporate event planning in Perth & Western Australia. Networking events, conferences, and product launches delivered with in-house design, engineering, and fabrication."
);
---

<BaseLayout
  title="Corporate Event Planning Perth & WA | Bloom'n Events Co"
  description="Corporate event planning in Perth & Western Australia. Networking events, conferences, and product launches crafted with in-house design, engineering, and fabrication. Based in Brookton, WA."
  path="/events"
  lcpImageSrc={heroImagePreloadSrc}
  lcpImageSrcSet={heroImagePreloadSrcSet}
  lcpImageSizes="100vw"
>
  <h1 class="visually-hidden">Corporate Event Planning Perth & WA</h1>

  <!-- Hero -->
  <section class="hero-section" aria-label="Hero">
    <div class="hero-background">
      <OptimizedImage
        src={heroImage}
        alt="Professional corporate event setup in Perth"
        class="hero-image"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        width="1600"
        height="900"
        sizes="100vw"
      />
    </div>
    <div class="hero-overlay" aria-hidden="true" />
    <div class="hero-content">
      <div class="w-full max-w-4xl px-4 text-center md:px-6">
        <h1 class="hero-headline">
          Corporate Events Crafted in Perth
        </h1>
        <p class="hero-subhead">
          We craft corporate experiences that help people connect, feel welcomed, and remember the moment. From networking events to product launches, our full-service approach cares for every detail with precision and artistry.
        </p>
        <div class="hero-cta">
          <a href="/contact" class="btn-gold">Start the Conversation</a>
          <a href="#case-studies" class="btn-outline-gold">View Success Stories</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Anchor nav -->
  <AnchorNav
    links={[
      { href: "#whatWeDoHeading", label: "What We Do" },
      { href: "#howItWorksHeading", label: "How It Works" },
      { href: "#whatYouGetHeading", label: "What You Get" },
      { href: "#faqsHeading", label: "FAQs" },
      { href: "#case-studies", label: "Success Stories" },
    ]}
    client:idle
  />

  <!-- What We Do Section -->
  <section class="section-main" aria-labelledby="whatWeDoHeading" id="whatWeDoHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="whatWeDoHeading" class="heading-blush-bg text-center">What We Do</h2>
      <div class="grid gap-4 mb-5">
        <div class="card shadow" style="background-color: var(--color-champers); border: 2px solid var(--color-gold); border-radius: 12px; padding: 24px 28px;">
          <div class="card-body">
            <p class="lead text-charcoal mb-3">
              <b>Bloom'n Events Co.</b> crafts corporate experiences that help teams connect and audiences feel valued. From single-day activations to multiday retreats—networking, professional development, leadership, and brand engagement across Perth and Western Australia.
            </p>
            <p class="text-charcoal mb-3">
              We design environments that reflect your culture and objectives. One team holds strategy, design, fabrication, and delivery—so you can focus on your people, not hand-offs.
            </p>
            <p class="text-charcoal mb-0">
              Based in Brookton, WA. 40+ years of combined expertise. Engineering-grade reliability that lets you focus on the experience.
            </p>
          </div>
        </div>
        <div class="grid gap-2 grid-cols-2 lg:grid-cols-5">
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria Connect140/Connect140 (1).jpg" class="w-full h-full object-cover object-center" alt="Corporate networking event setup" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria Connect140/Connect140 (2).jpg" class="w-full h-full object-cover object-center" alt="Brand activation at business event" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria Connect140/Connect140 (3).jpg" class="w-full h-full object-cover object-center" alt="Conference setup with arrangements" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria Connect140/Connect140 (4).JPG" class="w-full h-full object-cover object-center" alt="Product launch event" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/00ef2aa7-6a7e-45d9-9613-0f17e9c0941c.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/02f37f68-0f92-4a73-ab31-9214554139ec.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/064a7a51-766f-4fcf-b1df-f934851ef16c.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/1292f05a-3499-44dc-a9b9-09a7bd33d047.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/1fd2ee64-1cbe-4d47-8087-c8d748149530.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
          <div class="w-full h-40 overflow-hidden rounded shadow" style="height: 160px; border: 2px solid var(--color-gold); border-radius: 0.75rem;">
            <OptimizedImage src="/assets/images/Centuria 50th Birthday/25d854af-18a7-46ed-9cb8-1e3d7a818715.jpg" class="w-full h-full object-cover object-center" alt="Elegant 50th birthday celebration" loading="lazy" decoding="async" width="800" height="600" sizes="(max-width: 1024px) 50vw, 20vw" />
          </div>
        </div>
      </div>
      
      <!-- Event Types -->
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Networking Events</h3>
            <p class="text-charcoal">Intentional layouts and warm styling that invite conversation and meaningful introductions, designed to keep guests connected throughout the evening.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Conferences & Workshops</h3>
            <p class="text-charcoal">From small roundtables to large conferences, we shape sessions that feel clear, welcoming, and well-paced.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Product Launches</h3>
            <p class="text-charcoal">Immersive brand moments with interactive installations, dynamic displays, and a story your guests can feel.</p>
          </div>
        </article>
        <article class="card shadow service-card">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Custom Experiences</h3>
            <p class="text-charcoal">Distinctive events tailored to your brand and goals, designed to leave people feeling seen and cared for.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section-secondary" aria-labelledby="howItWorksHeading" id="howItWorksHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="howItWorksHeading" class="heading-blush-bg text-center">How It Works</h2>
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-chat-dots" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">1. Consultation</h3>
            <p class="text-charcoal">We start by listening to your objectives, audience, budget, and the feeling you want to create.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-pencil-square"></i>
            </div>
            <h3 class="text-gold mb-3">2. Design & Planning</h3>
            <p class="text-charcoal">We shape a clear plan—layout, styling, technical requirements, and timeline—so every detail has a home.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-tools"></i>
            </div>
            <h3 class="text-gold mb-3">3. Execution</h3>
            <p class="text-charcoal">On the day, the same team who designed it is there to install, style, and guide the flow.</p>
          </div>
        </article>
        <article class="card shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mb-3">
              <i class="bi bi-check-circle"></i>
            </div>
            <h3 class="text-gold mb-3">4. Follow-Up</h3>
            <p class="text-charcoal">Afterwards, we pack down with care and share a wrap-up so you're supported into what's next.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- What You Get Section -->
  <section class="section-main" aria-labelledby="whatYouGetHeading" id="whatYouGetHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="whatYouGetHeading" class="heading-blush-bg text-center">What You Get</h2>
      <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Full-Service Event Management</h3>
            <p class="text-charcoal">From first concept to pack-down, we hold the entire experience so you don't juggle vendors. You stay focused on your guests and goals.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Custom Design & Styling</h3>
            <p class="text-charcoal">Every event is designed to reflect your brand and objectives, with cohesive visuals that feel effortless. Every detail aligns to your message.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Technical Expertise</h3>
            <p class="text-charcoal">40+ years of engineering expertise so lighting, sound, power, and structures are safe and seamless. You can feel confident in the build.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Atmospheric Styling</h3>
            <p class="text-charcoal">We shape environments that invite connection—thoughtful layouts, lighting, and styling that feel welcoming. It feels intentional without being staged.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Single Point of Contact</h3>
            <p class="text-charcoal">One dedicated team, clear communication, and consistent care across the whole process. Nothing gets lost in hand-offs.</p>
          </div>
        </article>
        <article class="card shadow">
          <div class="card-body text-center">
            <h3 class="text-gold mb-3">Proven Results</h3>
            <p class="text-charcoal">Trusted by leading Perth businesses including <a href="/case-study-centuria-connect140" class="text-gold">Centuria Capital</a>, <a href="/case-study-centuria-50th-birthday" class="text-gold">140 St Georges Terrace</a>, and <a href="/case-study-hawaiian-forrestfield" class="text-gold">Hawaiian Shopping Centres</a>.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="section-secondary" aria-labelledby="faqsHeading" id="faqsHeading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="faqsHeading" class="heading-blush-bg text-center">Frequently Asked Questions</h2>
      <div class="accordion" id="eventsFAQ">
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" aria-expanded="true">
                What types of corporate events do you plan?
              </button>
            </h3>
            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We plan a wide range of corporate events including networking events, conferences, workshops, product launches, brand activations, team building events, and custom corporate experiences. Each one is tailored to your goals and the people you want to welcome.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2" aria-expanded="false">
                How far in advance should we book?
              </button>
            </h3>
            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We recommend booking at least 4-6 weeks in advance for standard events, and 8-12 weeks for larger conferences or complex activations. We can sometimes work to shorter timelines depending on availability. Reach out and we'll talk through your dates.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3" aria-expanded="false">
                Do you handle all aspects of the event?
              </button>
            </h3>
            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                Yes. We provide full-service event management, including design, styling, technical setup (lighting, sound, power), coordination, on-site management, and pack-down. We can also coordinate with caterers, speakers, and other vendors if helpful.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4" aria-expanded="false">
                What areas do you serve?
              </button>
            </h3>
            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                We serve businesses throughout Perth and Western Australia. Based in Brookton, WA, we regularly work with clients across the Perth metropolitan area and can travel to regional locations as needed.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h3 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5" aria-expanded="false">
                Can you work with our existing venue?
              </button>
            </h3>
            <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#eventsFAQ">
              <div class="accordion-body text-charcoal">
                Absolutely. We can work with your chosen venue or help you find the right location. We'll assess the space, handle all technical requirements, and transform it to match your event vision.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Success Stories Section -->
  <section class="section-main" aria-labelledby="caseStudiesHeading" id="case-studies">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="caseStudiesHeading" class="heading-blush-bg text-center">Related Success Stories</h2>
      <SuccessStoriesCarousel client:visible />
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="section-main" aria-labelledby="ctaHeading" id="cta">
    <div class="mx-auto max-w-4xl px-4 md:px-6">
      <h2 id="ctaHeading" class="heading-blush-bg text-center">Ready to craft your next corporate moment?</h2>
      <div class="card shadow cta-card">
        <div class="card-body text-center p-5">
          <p class="lead text-charcoal mb-5">Let's create a corporate experience that feels human, clear, and memorable for your team and stakeholders.</p>
          <div class="cta-buttons mb-4">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start the Conversation</a>
            <a href="/gallery" class="btn-outline-gold btn-lg mb-3">View Our Portfolio</a>
          </div>
          <p class="text-charcoal mt-4 mb-0">
            <i class="bi bi-telephone-fill" aria-hidden="true"></i>{" "}
            <a href={`tel:${CONTACT.phone.replace(/\s/g, "")}`} class="text-gold hover:underline">{CONTACT.phone}</a>
            {" | "}
            <i class="bi bi-envelope-fill" aria-hidden="true"></i>{" "}
            <a href={`mailto:${CONTACT.email}`} class="text-gold hover:underline">{CONTACT.email}</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <StickyMobileCTA client:idle />

  <!-- Structured Data: Service -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
</BaseLayout>
