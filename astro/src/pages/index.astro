---
/**
 * Home: video hero, Our Services, Why Us, Process, Trust Badges, Success Stories, Testimonials, Final CTA, acknowledgement.
 * Matches original layout and copy.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroStickyBoundary from "../components/HeroStickyBoundary.astro";
import SuccessStoriesCarousel from "../components/react/SuccessStoriesCarousel";
import TestimonialsCarousel from "../components/react/TestimonialsCarousel";
import StickyMobileCTA from "../components/react/StickyMobileCTA";
import { CONTACT } from "../lib/constants";
---

<BaseLayout
  title="Full-Service Event Production Perth & WA"
  description="Full-service event production in Perth & Western Australia. In-house design, engineering, fabrication, and installation. Corporate events, workshops, custom displays. One team, one accountable partner. Based in Brookton, WA."
  path="/"
>
  <!-- Hero: video bg, overlay, headline, CTAs -->
  <!-- Hero boundary (hero + sentinel only, NO navbar) -->
  <HeroStickyBoundary>
    <Fragment slot="hero">
      <div class="hero-section relative min-h-svh overflow-visible">
        <div class="hero-background">
          <video
            id="hero-video"
            class="h-full w-full object-cover object-center"
            muted
            loop
            playsinline
            preload="metadata"
            poster="/assets/images/logo-wht.png"
            width="1920"
            height="1080"
            aria-label="Bloom'n Events Co event production showcase video"
          >
            <source src="/assets/images/bloomn-hero.mp4" type="video/mp4" />
          </video>
          <script src="/scripts/hero-video.js" defer></script>
        </div>
        <div class="hero-overlay" aria-hidden="true" />
        <div class="hero-content">
          <div class="w-full max-w-4xl px-4 text-center md:px-6">
            <h1 id="hero-heading" class="hero-headline">
              Transformation.<br />Connection.<br />Impact.
            </h1>
            <p class="hero-subhead">
              Full-service event production with engineering-grade reliability. From concept to completion, we manage every
              stage in-house—locally, collaboratively, and with precision. Give us a date, a budget, and time—we'll make it
              happen.
            </p>
            <div class="hero-cta">
              <a href="/contact" class="btn-gold">Start Your Project</a>
              <a href="/capabilities" class="btn-outline-gold">Explore Our Capabilities</a>
            </div>
          </div>
        </div>
      </div>
    </Fragment>
  </HeroStickyBoundary>

  <!-- Our Services -->
  <section class="section-main" aria-labelledby="services-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="services-heading" class="heading-blush-bg">
        Our Services
      </h2>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <article class="service-card shadow-md">
          <img
            src="/assets/images/Home/Corporate%20Events%20Hero%20Image.jpg"
            srcset="/assets/images/Home/Corporate%20Events%20Hero%20Image.jpg 1600w, /assets/images/Home/Corporate%20Events%20Hero%20Image.jpg 1200w, /assets/images/Home/Corporate%20Events%20Hero%20Image.jpg 800w, /assets/images/Home/Corporate%20Events%20Hero%20Image.jpg 480w"
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
            alt="Corporate event planning and production services in Perth and Western Australia"
            class="card-img-top"
            loading="lazy"
            decoding="async"
            width="1600"
            height="900"
          />
          <div class="card-body p-5 text-center">
            <h3 class="mb-3 font-display text-xl font-semibold text-gold">Corporate Events</h3>
            <p class="text-charcoal">
              One team handles everything—from strategy to execution. No juggling multiple vendors. No coordination
              headaches.
            </p>
            <a href="/events" class="btn-gold mt-4 inline-block text-sm">Explore Corporate Events</a>
          </div>
        </article>
        <article class="service-card shadow-md">
          <img
            src="/assets/images/Home/Creative%20Workshops%20Hero%20Image.jpg"
            srcset="/assets/images/Home/Creative%20Workshops%20Hero%20Image.jpg 1600w, /assets/images/Home/Creative%20Workshops%20Hero%20Image.jpg 1200w, /assets/images/Home/Creative%20Workshops%20Hero%20Image.jpg 800w, /assets/images/Home/Creative%20Workshops%20Hero%20Image.jpg 480w"
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
            alt="Creative workshops for kids and adults in Perth and Western Australia"
            class="card-img-top"
            loading="lazy"
            decoding="async"
            width="1600"
            height="900"
          />
          <div class="card-body p-5 text-center">
            <h3 class="mb-3 font-display text-xl font-semibold text-gold">Creative Workshops</h3>
            <p class="text-charcoal">
              Designed and delivered in-house. No external facilitators to brief. Consistent quality, aligned with your
              brand.
            </p>
            <a href="/workshops" class="btn-gold mt-4 inline-block text-sm">Discover Workshops</a>
          </div>
        </article>
        <article class="service-card shadow-md">
          <img
            src="/assets/images/Home/Custom%20Displays%20Hero%20Image.jpg"
            srcset="/assets/images/Home/Custom%20Displays%20Hero%20Image.jpg 1600w, /assets/images/Home/Custom%20Displays%20Hero%20Image.jpg 1200w, /assets/images/Home/Custom%20Displays%20Hero%20Image.jpg 800w, /assets/images/Home/Custom%20Displays%20Hero%20Image.jpg 480w"
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
            alt="Custom displays and installations for events in Perth and Western Australia"
            class="card-img-top"
            loading="lazy"
            decoding="async"
            width="1600"
            height="900"
          />
          <div class="card-body p-5 text-center">
            <h3 class="mb-3 font-display text-xl font-semibold text-gold">Custom Displays</h3>
            <p class="text-charcoal">
              Engineered and built locally. No shipping delays. No assembly surprises. One team, one vision, delivered on
              time.
            </p>
            <a href="/displays" class="btn-gold mt-4 inline-block text-sm">View Custom Displays</a>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Why Choose Bloom'n Events Co -->
  <section class="section-main" aria-labelledby="why-us-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="why-us-heading" class="heading-blush-bg">
        Why Choose Bloom'n Events Co?
      </h2>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <article class="card h-100 shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mx-auto mb-3">
              <i class="bi bi-tools" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">Full In-House Production</h3>
            <p class="text-charcoal">
              One team, one point of contact. No hand-offs between suppliers. No miscommunication. Your project stays
              intact from first sketch to final install.
            </p>
          </div>
        </article>
        <article class="card h-100 shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mx-auto mb-3">
              <i class="bi bi-shield-check" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">Engineering-Grade Reliability</h3>
            <p class="text-charcoal">
              Built to the same standards you expect from your own operations. Safety, compliance, and structural
              integrity—so you can focus on outcomes, not risks.
            </p>
          </div>
        </article>
        <article class="card h-100 shadow why-us-card">
          <div class="card-body text-center">
            <div class="why-us-icon mx-auto mb-3">
              <i class="bi bi-lightbulb" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">Artistry Meets Technology</h3>
            <p class="text-charcoal">
              Creative vision executed with precision. No compromises between ambition and reality. Bold ideas, safely
              delivered.
            </p>
          </div>
        </article>
      </div>
      <div class="mt-10 text-center">
        <a href="/capabilities" class="btn-gold">Learn More About Our Capabilities</a>
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="section-secondary" aria-labelledby="process-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="process-heading" class="heading-blush-bg">
        How We Work... As Easy as...
      </h2>
      <div class="grid gap-6 justify-center sm:grid-cols-2 lg:grid-cols-4">
        <article class="card h-100 shadow text-center process-card">
          <div class="card-body p-4">
            <div class="process-number mb-3">01</div>
            <h3 class="text-gold mb-3">Discovery</h3>
            <p class="text-charcoal mb-0">
              We listen. Date, budget, time—we understand your constraints. No assumptions. Clear expectations from day
              one.
            </p>
          </div>
        </article>
        <article class="card h-100 shadow text-center process-card">
          <div class="card-body p-4">
            <div class="process-number mb-3">02</div>
            <h3 class="text-gold mb-3">Design & Engineering</h3>
            <p class="text-charcoal mb-0">
              Design and engineering work together from the start. No creative concepts that can't be built. No
              engineering compromises that kill the vision.
            </p>
          </div>
        </article>
        <article class="card h-100 shadow text-center process-card">
          <div class="card-body p-4">
            <div class="process-number mb-3">03</div>
            <h3 class="text-gold mb-3">Fabrication</h3>
            <p class="text-charcoal mb-0">
              Built locally in our workshop. You see progress. You control changes. No remote suppliers, no shipping
              delays, no surprises.
            </p>
          </div>
        </article>
        <article class="card h-100 shadow text-center process-card">
          <div class="card-body p-4">
            <div class="process-number mb-3">04</div>
            <h3 class="text-gold mb-3">Delivery</h3>
            <p class="text-charcoal mb-0">
              One team installs, executes, and manages. The same people who designed it, built it. No hand-offs. No
              confusion. Just results.
            </p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="section-main" aria-labelledby="trust-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="trust-heading" class="heading-blush-bg">
        Why Clients Trust Us
      </h2>
      <div class="grid gap-6 justify-center sm:grid-cols-2 lg:grid-cols-4">
        <article class="card h-100 shadow text-center trust-badge-card">
          <div class="card-body p-4">
            <div class="trust-icon mb-3">
              <i class="bi bi-shield-check" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">Fully Insured</h3>
            <p class="text-charcoal mb-0">Comprehensive insurance coverage for peace of mind on every project.</p>
          </div>
        </article>
        <article class="card h-100 shadow text-center trust-badge-card">
          <div class="card-body p-4">
            <div class="trust-icon mb-3">
              <i class="bi bi-award" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">40+ Years Experience</h3>
            <p class="text-charcoal mb-0">Combined expertise from high-risk, high-compliance environments.</p>
          </div>
        </article>
        <article class="card h-100 shadow text-center trust-badge-card">
          <div class="card-body p-4">
            <div class="trust-icon mb-3">
              <i class="bi bi-gear" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">In-House Production</h3>
            <p class="text-charcoal mb-0">Everything designed, engineered, and built locally under one roof.</p>
          </div>
        </article>
        <article class="card h-100 shadow text-center trust-badge-card">
          <div class="card-body p-4">
            <div class="trust-icon mb-3">
              <i class="bi bi-check-circle" aria-hidden="true"></i>
            </div>
            <h3 class="text-gold mb-3">Engineering-Grade</h3>
            <p class="text-charcoal mb-0">
              Precision, reliability, and safety standards for corporate and government clients.
            </p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Success Stories -->
  <section class="section-main" aria-labelledby="case-studies-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="case-studies-heading" class="heading-blush-bg">
        Success Stories
      </h2>
      <SuccessStoriesCarousel client:idle />
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials section-main" aria-labelledby="testimonials-heading">
    <div class="mx-auto max-w-7xl px-4 md:px-6">
      <h2 id="testimonials-heading" class="heading-blush-bg text-center">
        What Our Clients Say
      </h2>
      <TestimonialsCarousel client:idle />
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section-main" aria-labelledby="final-cta-heading">
    <div class="mx-auto max-w-4xl px-4 md:px-6">
      <h2 id="final-cta-heading" class="heading-blush-bg">
        Ready to Start Your Project?
      </h2>
      <div class="card shadow cta-card">
        <div class="card-body">
          <p class="lead text-charcoal mb-5">
            Give us a date, a budget, and time—we'll make it happen. One team. One accountable partner. No juggling
            vendors. No coordination headaches.
          </p>
          <div class="cta-buttons mb-4">
            <a href="/contact" class="btn-gold btn-lg me-3 mb-3">Start Your Project</a>
            <a href="/capabilities" class="btn-outline-gold btn-lg mb-3">Explore Our Capabilities</a>
          </div>
          <p class="text-charcoal mt-4 mb-0">
            <i class="bi bi-telephone-fill" aria-hidden="true"></i>{" "}
            <a href={`tel:${CONTACT.phone.replace(/\s/g, "")}`} class="text-gold hover:underline">
              {CONTACT.phone}
            </a>{" "}
            | <i class="bi bi-envelope-fill" aria-hidden="true"></i>{" "}
            <a href={`mailto:${CONTACT.email}`} class="text-gold hover:underline">
              {CONTACT.email}
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Acknowledgement -->
  <section class="section-main" aria-labelledby="ack-heading">
    <div class="mx-auto max-w-[1232px] px-4 md:px-6">
      <div class="heading-blush-bg text-center">
        <p id="ack-heading" class="acknowledgement-text mb-0">
          Bloom'n Events Co Pty Ltd acknowledges the Traditional Owners of the lands on which we live and work — the
          Noongar people — and pays our deepest respects to Elders past and present. We honour their enduring
          connection to land, waters, and community, and extend that respect to all First Nations peoples across
          Australia.
        </p>
      </div>
    </div>
  </section>

  <!-- Sticky Mobile CTA -->
  <StickyMobileCTA client:idle />
</BaseLayout>
